{# Dime/TimetrackerFrontednBundle/Resources/views/Settings/index.html.twig #}

<header class="page-header">
    <div class="pull-right">
        <button id="filter-button" class="btn btn-large" title="{% trans %}Show filter{% endtrans %}"><i class="icon-filter hide-text">{% trans %}Show filter{% endtrans %}</i></button>
        <a href="#setting/add" class="btn btn-large" title="{% trans %}Add setting{% endtrans %}"><i class="icon-plus hide-text">{% trans %}Add Setting{% endtrans %}</i></a>
    </div>
    <h1>{% trans %}Settings{% endtrans %}</h1>
</header>

<ul id="filter" class="nav nav-list hide">
    <li class="nav-header">{% trans %}Filter{% endtrans %}</li>
    <li>
        <i class="icon-search hide-text">{% trans %}Search{% endtrans %}</i>
        <input id="filter-search" class="filter filter-search input-medium" title="Search" placeholder="{% trans %}Search...{% endtrans %}">
    </li>
    <li>
        <button id="filter-reset" class="btn">{% trans %}Reset{% endtrans %}</button>
    </li>
</ul>

<div id="settings" class="loading"></div>
<div class="pagination t-center"></div>

<script type="text/template" id="tpl-setting-empty">
    <div class="alert alert-info"><strong>{% trans %}Your list is empty!{% endtrans %}</strong> {% trans %}Master, how may I serve you?{% endtrans %}</div>
</script>

<script type="text/template" id="tpl-setting-item">
    <h3 class="title">
        <div class="btn-group pull-right">
            <a class="btn edit" href="#setting/<%- data.id %>/edit" title="{% trans %}Edit{% endtrans %}"><i class="icon-pencil hide-text">{% trans %}Edit{% endtrans %}</i></a>
            <a class="btn delete" href="#setting/<%- data.id %>/delete" title="{% trans %}Delete{% endtrans %}"><i class="icon-remove hide-text">{% trans %}Delete{% endtrans %}</i></a>
        </div>
        <span class="setting-item">
            <%- data.namespace %> - <%- data.name %>:
            <span class="value"><%- data.value %></span>
        </span>
    </h3>
</script>
