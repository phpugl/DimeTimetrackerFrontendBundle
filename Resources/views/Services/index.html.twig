{% extends "DimeTimetrackerFrontendBundle::layout.html.twig" %}

{% block header %}
  <div class="pull-right">
    <button class="service-new btn btn-primary btn-small">Add service</button>
  </div>
  <h1>Service</h1>
{% endblock %}

{% block content %}
<div id="services" class="loading striped"></div>

<script type="text/template" id="tpl-service-item">
<div class="pull-right">
  <button class="edit btn">Edit</button>
  <button class="delete btn btn-danger">Delete</button>
</div>
<h3><%- data.name %><% if (data.rate) { %> <em>(Rate: <%- data.rate %>)</em><% } %></h3>
<% if (data.description) { %><p><%- data.description %></p><% } %>
</script>

<div id="service-form" class="modal hide" data-prefix="service-">
    <div class="modal-header">
        <a href="#" class="close">Ã—</a>
        <h3 class="title">Add service</h3>
    </div>
    <div class="modal-body">
        <form class="form-horizontal">
            <fieldset>
                <div class="control-group">
                    <label for="service-name" class="control-label">Name:</label>
                    <div class="controls">
                        <input id="service-name" class="service-name input-xlarge" type="text" value="" >
                    </div>
                </div>
                <div class="control-group">
                    <label for="service-rate" class="control-label">Rate:</label>
                    <div class="controls">
                        <input id="service-rate" class="service-rate input-xlarge" type="text" value="" >
                    </div>
                </div>
                <div class="control-group">
                    <label for="service-description" class="control-label">Description:</label>
                    <div class="controls">
                        <textarea id="service-description" class="service-description input-xlarge" rows="3"></textarea>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
    <div class="modal-footer">
        <button class="save btn btn-primary span2">Save</button>
        <button class="cancel btn">Cancel</button>
    </div>
</div>
{% endblock %}

{% block sidebar %}
<section>
  
</section>
{% endblock %}

{% block js %}
<script type="text/javascript">
  (function ($, App) {
    var services = new App.Collection.Services();
    var form = new App.Views.Service.Form({el: '#service-form', collection: services});
    new App.Views.Service.List({collection: services, itemTagName: "section", form: form}).render();
    services.fetch();

    $('.service-new').bind('click', function(e) {
      e.preventDefault();
      form.model = new App.Model.Service();
      form.render();
    });
  })(jQuery, Dime);
</script>
{% endblock %}

