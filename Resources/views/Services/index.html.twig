{# Dime/TimetrackerFrontednBundle/Resources/views/Services/index.html.twig #}

<header>
  <div class="pull-right">
    <a href="#service/add" class="btn btn-primary btn-small">Add service</a>
  </div>
  <h1>Service</h1>
</header>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Alias</th>
      <th>Rate</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody id="services">
    <tr>
      <td class="loading" colspan="4"></td>
    </tr>
  </tbody>
</table>

<script type="text/template" id="tpl-service-item">
<td><%- data.name %></td>
<td><%- data.alias %></td>
<td><%- data.rate %></td>
<td>
  <a class="edit" href="#service/<%- data.id %>/edit"><i class="icon-pencil"></i> Edit</a>
  <a class="delete" href="#service/<%- data.id %>/delete"><i class="icon-remove"></i> Delete</a>
</td>
</script>