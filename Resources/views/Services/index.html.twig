{# Dime/TimetrackerFrontednBundle/Resources/views/Services/index.html.twig #}
<header class="page-header">
  <div class="pull-right">
    <a href="#service/add" class="btn btn-large" title="Add service"><i class="icon-plus hide-text">Add service</i></a>
  </div>
  <h1>Service</h1>
</header>

<div id="services" class="loading" colspan="4"></div>

<script type="text/template" id="tpl-service-item">
    <h3 class="title">
        <div class="btn-group pull-right">
            <a class="btn edit" href="#service/<%- data.id %>/edit" title="Edit"><i class="icon-pencil hide-text">Edit</i></a>
            <a class="btn delete" href="#service/<%- data.id %>/delete" title="Delete"><i class="icon-remove hide-text">Delete</i></a>
        </div>
        <%- data.name %>
        <span class="alias">:<%- data.alias %></span>
    </h3>
    <div class="details">
        <dl class="dl-horizontal">
            <dt>Rate</dt>
            <dd><%- data.rate %></dd>
            <% if (data.description)  { %>
            <dt>Description</dt>
            <dd><%- data.description %></dd>
            <% } %>
        </dl>
    </div>
</script>
