{# Dime/TimetrackerFrontednBundle/Resources/views/Services/index.html.twig #}
<header class="page-header">
    <h1>{% trans %}Service{% endtrans %}</h1>
</header>

<form id="service-form" class="form-horizontal">
    <fieldset>
        <div class="control-group">
            <label for="service-name" class="control-label">{% trans %}Name{% endtrans %}:</label>
            <div class="controls">
                <input id="service-name" name="name" class="input-block-level" type="text" value="">
                <span class="help-inline"></span>
            </div>
        </div>
        <div class="control-group">
            <label for="service-alias" class="control-label">{% trans %}Alias{% endtrans %}:</label>
            <div class="controls">
                <div class="input-append">
                    <input id="service-alias" name="alias" type="text" value="" maxlength="30">
                    <a type="button" class="slugify add-on btn" title="Create alias from name"><i class="icon-refresh"></i></a>
                </div>
                <span class="help-inline"></span>
            </div>
        </div>
        <div class="control-group">
            <label for="service-rate" class="control-label">{% trans %}Rate{% endtrans %}:</label>
            <div class="controls">
                <input id="service-rate" name="rate" class="input-block-level" type="text" value="">
                <span class="help-inline"></span>
            </div>
        </div>
        <div class="control-group">
            <label for="service-description" class="control-label">{% trans %}Description{% endtrans %}:</label>
            <div class="controls">
                <textarea id="service-description" name="description" class="input-block-level" rows="3"></textarea>
                <span class="help-inline"></span>
            </div>
        </div>
        <div class="control-group">
            <label for="service-tags" class="control-label">{% trans %}Tags{% endtrans %}:</label>
            <div class="controls">
                <input type="text" id="service-tags" name="tags" class="input-block-level"/>
            </div>
        </div>
    </fieldset>
    <fieldset class="form-actions">
        <div class="pull-right">
            <button type="button" class="cancel btn">{% trans %}Cancel{% endtrans %}</button>
            <button type="submit" class="save btn btn-primary">{% trans %}Save{% endtrans %}</button>
        </div>
    </fieldset>
</form>
