{# Dime/TimetrackerFrontednBundle/Resources/views/Activities/edit.html.twig #}
<header class="page-header">
    <h1>Activity</h1>
</header>

<form id="activity-form" class="form-horizontal">
    <fieldset>
        <legend>{% trans %}Description{% endtrans %}</legend>
        <textarea id="activity-description" name="description" class="input-block-level" rows="3"></textarea>
    </fieldset>
    <fieldset>
        <legend>{% trans %}Relations{% endtrans %}</legend>
        <div class="control-group">
            <label for="activity-customer" class="control-label">{% trans %}Customer{% endtrans %}:</label>
            <div class="controls">
                <select id="activity-customer" name="customer" class="input-block-level"></select>
                <span class="error-customer help-inline"></span>
            </div>
        </div>
        <div class="control-group">
            <label for="activity-project" class="control-label">{% trans %}Project{% endtrans %}:</label>
            <div class="controls">
                <select id="activity-project" name="project" class="input-block-level"></select>
                <span class="error-project help-inline"></span>
            </div>
        </div>
        <div class="control-group">
            <label for="activity-service" class="control-label">{% trans %}Service{% endtrans %}:</label>
            <div class="controls">
                <select id="activity-service" name="service" class="input-block-level"></select>
                <span class="error-service help-inline"></span>
            </div>
        </div>
        <div class="control-group">
            <label for="activity-tags" class="control-label">{% trans %}Tags{% endtrans %}:</label>
            <div class="controls">
                <input id="activity-tags" name="tags" class="input-block-level" type="text" value="">
                <span class="error-tags help-inline"></span>
            </div>
        </div>
    </fieldset>
    <fieldset id="tab-prices" class="tab-pane">
        <legend>{% trans %}Prices{% endtrans %}</legend>
        <div class="control-group">
            <label for="activity-rate" class="control-label">{% trans %}Rate{% endtrans %}:</label>
            <div class="controls">
                <input id="activity-rate" name="rate" class="input-block-level" type="number" value="">
                <span class="error-rate help-inline"></span>
            </div>
        </div>
        <div class="control-group">
            <label for="activity-rateReference" class="control-label">{% trans %}Rate reference{% endtrans %}:</label>
            <div class="controls">
                <input id="activity-rateReference" name="rateReference" class="input-block-level" type="text" value="">
                <span class="error-rateReference help-inline"></span>
            </div>
        </div>
    </fieldset>
    <fieldset class="form-actions">
        <div class="pull-right">
            <button type="button" class="cancel btn">{% trans %}Cancel{% endtrans %}</button>
            <button type="submit" class="save btn btn-primary">{% trans %}Save{% endtrans %}</button>
        </div>
    </fieldset>
</form>
