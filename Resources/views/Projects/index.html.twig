{# Dime/TimetrackerFrontednBundle/Resources/views/Projects/index.html.twig #}

<div class="pull-right">
  <a href="#project/add" class="btn btn-primary btn-small">Add project</a>
</div>
<h1>Project</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Alias</th>
      <th>Rate</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody id="projects">
    <tr>
      <td class="loading" colspan="5"></td>
    </tr>
  </tbody>
</table>

<script type="text/template" id="tpl-project-item">
<td><%- data.name %></td>
<td><%- data.alias %></td>
<td><% if (data.rate) { %><%- data.rate %><% } %></td>
<td><% if (data.description) { %><%- data.description %><% } %></td>
<td>
  <a class="edit" href="#project/<%- data.id %>/edit"><i class="icon-pencil"></i> Edit</a>
  <a class="delete" href="#project/<%- data.id %>/delete"><i class="icon-remove"></i> Delete</a>
</td>
</script>